<!DOCTYPE html>

<html>
  <head>
    <link rel="stylesheet" href="~/Content/themes/cupertino/jquery-ui.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap.css"/>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css"/>
    <link rel="stylesheet" href="~/Content/navbar_custom.css"/>

    <meta name="viewport" content="width=device-width"/>
    <title>@ViewBag.Title</title>

    <script src="~/Scripts/jquery-2.1.4.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    <style>
      .divTable {
        display: table;
        margin: 40px;
        width: 100%;
      }
      .divTable > div {
        display: table-row;
      }
      .divTable > div > div {
        display: table-cell;
      }
      .mainTitulo {
        font-family: "Old English Text MT";
        font-size: 36pt;
      }
      .subTitulo {
        font-family: "Segoe UI";
        font-size: 24pt;
      }
    </style>
  </head>

  <body>
    <header>
      <div class="container" style="margin-top: 20px;">
        <div class="row">
          <div class="col-sm-2">
            <img src="../Imagenes/Horror.png" style="margin: 0 auto;" />
          </div>
          <div class="col-sm-4">
            <div>
              <div class="mainTitulo">Oh my book!</div>
              <div class="subTitulo">Sitio de Libros</div>
            </div>
          </div>
          <div class="col-sm-6" style="text-align: center;">
            <img src="../Imagenes/libros-3.jpg" height="150" style="width: 100%;"/>
          </div>
        </div>
      </div>
    </header>

    <div class="container" style="margin-top: 20px;">
      <nav class="navbar navbar-default navbar-custom">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">OMB!</a>
          </div>

          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><a href="#">Opcion 1</a></li>
              <li><a href="#">Opcion 2</a></li>
              <li><a href="#">Opcion 3</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li>
                @Html.ActionLink("Login", "Login", "Home")
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </div>

    <div class="container">
        @RenderBody()
      </div>
    </div>

    <footer>
      Copyright Polo Tecnologico 2015
    </footer>
  </body>
</html>
